rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is verified
    function isVerified() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isVerified == true;
    }
    
    // Helper function to check if user is active
    function isActive() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isActive == true;
    }
    
    // Helper function to check if user is verified and active
    function isVerifiedAndActive() {
      return isVerified() && isActive();
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own data if verified and active, admins can read all
      allow read: if isAuthenticated() && (isAdmin() || (isOwner(userId) && isVerifiedAndActive()));
      
      // Users can create their own document during registration (emailVerified and isVerified will be false)
      // Admins can create any user document
      allow create: if isAuthenticated() && (
        isAdmin() || 
        (isOwner(userId) && 
         request.resource.data.emailVerified == false &&
         request.resource.data.isVerified == false &&
         request.resource.data.isActive == true)
      );
      
      // Users can update their own data if verified and active, admins can update any
      allow update: if isAuthenticated() && (
        isAdmin() || 
        (isOwner(userId) && isVerifiedAndActive())
      );
      
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // Products collection
    match /products/{productId} {
      // Anyone can read products
      allow read: if true;
      // Only admins can create, update, or delete products
      allow create, update, delete: if isAdmin();
    }
    
    // Categories collection
    match /categories/{categoryId} {
      // Anyone can read categories
      allow read: if true;
      // Only admins can create, update, or delete categories
      allow create, update, delete: if isAdmin();
    }
    
    // Orders collection
    match /orders/{orderId} {
      // Users can read their own orders if verified and active, admins can read all
      allow read: if isAuthenticated() && (
        isAdmin() || 
        (resource.data.userId == request.auth.uid && isVerifiedAndActive())
      );
      // Users can create their own orders if verified and active, admins can create any
      allow create: if isAuthenticated() && (
        isAdmin() || 
        (request.resource.data.userId == request.auth.uid && isVerifiedAndActive())
      );
      // Only admins can update or delete orders
      allow update, delete: if isAdmin();
    }
    
    // Carts collection
    match /carts/{cartId} {
      // Users can read their own cart if verified and active, admins can read all
      allow read: if isAuthenticated() && (
        isAdmin() || 
        (resource.data.userId == request.auth.uid && isVerifiedAndActive())
      );
      // Users can create their own cart if verified and active, admins can create any
      allow create: if isAuthenticated() && (
        isAdmin() || 
        (request.resource.data.userId == request.auth.uid && isVerifiedAndActive())
      );
      // Users can update their own cart if verified and active, admins can update any
      allow update: if isAuthenticated() && (
        isAdmin() || 
        (resource.data.userId == request.auth.uid && isVerifiedAndActive())
      );
      // Users can delete their own cart if verified and active, admins can delete any
      allow delete: if isAuthenticated() && (
        isAdmin() || 
        (resource.data.userId == request.auth.uid && isVerifiedAndActive())
      );
    }
    
    // Reviews collection (for future use)
    match /reviews/{reviewId} {
      // Anyone can read reviews
      allow read: if true;
      // Users can create reviews for products if verified and active
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid && 
                     isVerifiedAndActive();
      // Users can update their own reviews if verified and active
      allow update: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid && 
                     isVerifiedAndActive();
      // Users can delete their own reviews if verified and active, admins can delete any
      allow delete: if isAuthenticated() && (
        isAdmin() || 
        (resource.data.userId == request.auth.uid && isVerifiedAndActive())
      );
    }
  }
}

